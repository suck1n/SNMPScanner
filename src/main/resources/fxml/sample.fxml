<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.duck.gui.Controller">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <ImageView fitHeight="40" fitWidth="40">
                <Image url="@../scanner.png" />
            </ImageView>
            <Label>SNMP-Scanner</Label>
            <BorderPane.margin>
                <Insets bottom="10.0" left="5.0" top="10.0" />
            </BorderPane.margin>
        </HBox>
    </top>
    <center>
        <TabPane nodeOrientation="LEFT_TO_RIGHT" tabClosingPolicy="UNAVAILABLE">
            <Tab text="Scan">
                <VBox>

                    <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <Label prefWidth="60">Network: </Label>
                        <TextField fx:id="txt_Address" prefWidth="36.0" promptText="192" />
                        <Label>.</Label>
                        <TextField prefWidth="36.0" promptText="168" />
                        <Label>.</Label>
                        <TextField prefWidth="36.0" promptText="1" />
                        <Label>.</Label>
                        <TextField prefWidth="36.0" promptText="0" />
                        <Label>/</Label>
                        <TextField prefHeight="25.0" prefWidth="30.0" promptText="24" />
                        <Button fx:id="btn_Scan" mnemonicParsing="false" prefWidth="90.0" text="Scan" />
                        <CheckBox>Custom Range</CheckBox>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </HBox>
                    <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                        <Label prefWidth="60">End-IP: </Label>
                        <TextField prefWidth="36.0" promptText="192" />
                        <Label>.</Label>
                        <TextField prefWidth="36.0" promptText="168" />
                        <Label>.</Label>
                        <TextField prefWidth="36.0" promptText="1" />
                        <Label>.</Label>
                        <TextField prefWidth="36.0" promptText="0" />
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </HBox>
                    <Label>
                        Results
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </Label>
                    <TabPane nodeOrientation="LEFT_TO_RIGHT" tabClosingPolicy="UNAVAILABLE">
                        <Tab text="Public">

                        </Tab>
                    </TabPane>
                </VBox>
            </Tab>
            <Tab text="Trap Server">
                <VBox>
                    <CheckBox>
                        Enable Listener
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </CheckBox>
                    <HBox spacing="10" HBox.hgrow="ALWAYS">
                        <Label>Port Number: </Label>
                        <TextField promptText="162"/>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </HBox>
                    <Label>
                        Results
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </Label>
                    <TabPane nodeOrientation="LEFT_TO_RIGHT" tabClosingPolicy="UNAVAILABLE">
                        <Tab text="Public">

                        </Tab>
                    </TabPane>
                </VBox>
            </Tab>
            <Tab text="Settings">
                <!-- ADD OIDS, MIBS, COMMUNITIES-->
            </Tab>
        </TabPane>
    </center>
</BorderPane>
